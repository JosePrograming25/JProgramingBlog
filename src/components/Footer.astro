---
const currentYear = new Date().getFullYear();

const navLinks = [
  { name: "Inicio", href: "/" },
  { name: "Blog", href: "/Blog" },
  { name: "Etiquetas", href: "/tags" },
  { name: "Proyectos", href: "/projects" },
  { name: "Sobre mí", href: "/about" },
];

const socialLinks = [
  {
    name: "GitHub",
    href: "https://github.com/JoseProgaming25", // Replace with actual if known, using generic for now based on context
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>`,
  },
  {
    name: "LinkedIn",
    href: "#", // Placeholder
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-linkedin"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>`,
  },
  {
    name: "Twitter",
    href: "#", // Placeholder
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-twitter"><path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"/></svg>`,
  },
];
---

<footer
  class="bg-white dark:bg-[#020617] border-t border-slate-200 dark:border-slate-800 mt-auto"
>
  <div class="max-w-[1200px] mx-auto px-4 sm:px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">
      {/* Brand Section */}
      <div class="flex flex-col gap-4">
        <a
          href="/"
          class="text-2xl font-extrabold no-underline bg-linear-to-br from-indigo-500 to-purple-500 bg-clip-text text-transparent tracking-tighter w-fit"
        >
          JPrograming25
        </a>
        <p
          class="text-slate-600 dark:text-slate-400 text-sm leading-relaxed max-w-xs"
        >
          Explorando el mundo del desarrollo web, compartiendo conocimientos y
          construyendo experiencias digitales únicas.
        </p>
      </div>

      {/* Quick Links */}
      <div class="flex flex-col gap-4">
        <h3 class="font-bold text-slate-900 dark:text-white text-lg">
          Navegación
        </h3>
        <ul class="flex flex-col gap-2">
          {
            navLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-slate-600 dark:text-slate-400 hover:text-indigo-500 dark:hover:text-indigo-400 transition-colors text-sm"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      {/* Social & Contact */}
      <div class="flex flex-col gap-4">
        <h3 class="font-bold text-slate-900 dark:text-white text-lg">
          Conecta
        </h3>
        <div class="flex gap-4">
          {
            socialLinks.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="p-2 rounded-full bg-slate-100 dark:bg-slate-800 text-slate-600 dark:text-slate-400 hover:bg-indigo-100 dark:hover:bg-indigo-900/30 hover:text-indigo-500 dark:hover:text-indigo-400 transition-all duration-300"
                aria-label={social.name}
                set:html={social.icon}
              />
            ))
          }
        </div>
        <p class="text-xs text-slate-500 dark:text-slate-500 mt-4">
          Construido con
          <a
            href="https://astro.build"
            target="_blank"
            class="hover:text-indigo-500 transition-colors">Astro</a
          >
          y
          <a
            href="https://tailwindcss.com"
            target="_blank"
            class="hover:text-indigo-500 transition-colors">Tailwind CSS</a
          >.
        </p>
      </div>
    </div>

    {/* Bottom Bar */}
    <div
      class="mt-12 pt-8 border-t border-slate-200 dark:border-slate-800 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-slate-500 dark:text-slate-500"
    >
      <p>&copy; {currentYear} JPrograming25. Todos los derechos reservados.</p>
      <div class="flex gap-6">
        <a
          href="#"
          class="hover:text-slate-900 dark:hover:text-slate-300 transition-colors"
          >Privacidad</a
        >
        <a
          href="#"
          class="hover:text-slate-900 dark:hover:text-slate-300 transition-colors"
          >Términos</a
        >
      </div>
    </div>
  </div>
</footer>
